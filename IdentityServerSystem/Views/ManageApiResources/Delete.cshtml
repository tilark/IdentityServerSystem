@model IdentityServerSystem.Models.ManageApiResourceViewModels.ApiResourceEditViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<fieldset class="col-md-12 panel panel-default">
    <legend>删除ApiResource</legend>

    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden="hidden" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" readonly />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <form asp-action="Delete" asp-controller="ManageApiResources">
            <input asp-for="Id" hidden ="hidden"/>
            <div class="form-group">
                <div class="col-md-offset-5">
                    <input type="submit" value="删除" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">返回列表</a>
    </div>
</fieldset>

