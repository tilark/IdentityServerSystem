@model IEnumerable<IdentityServer4.EntityFramework.Entities.IdentityResource>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p>
    <a asp-action="Create">Create New IdentityResource</a>
</p>
<fieldset class="col-md-12 panel panel-default">
    <legend class="text-blue">IdentityResources</legend>
    <table class="table table-bordered" id="table_id">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                <th>@Html.DisplayNameFor(model => model.Emphasize)</th>

                <th>@Html.DisplayNameFor(model => model.UserClaims)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Emphasize)</td>

                    <td>
                        @foreach(var userClaim in item.UserClaims)
                        {
                            @userClaim.Type ;<br />
                        }
                    </td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span>&nbsp;编辑</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span>&nbsp;删除</a></td>

                </tr>
                
            }
           
        </tbody>
    </table>
</fieldset>

@section scripts{
    @Html.Partial("_TableUseDataTable")

}